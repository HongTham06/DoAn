@{
    ViewBag.Title = "XemGioHang";
}
@using BaiTapLon.Models;
@model List<item>
<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold; background-color:black">
        <td style="color:red"> Mã sản phẩm</td>
        <td style="color:red"> Tên sản phẩm</td>
        <td style="color:red"> Nhà sản xuất</td>
        <td style="color:red"> Cấu hình</td>
        <td style="color:red"> Tính năng</td>
         <td style="color:red"> Hình ảnh</td>
        <td style="color:red"> Giá</td>
        <td style="color:red"> Số lượng mua</td>
        <td style="color:red">Thành tiền</td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var i in Model)
    {
        <tr style="text-align:center; font-weight:bold; background-color:white">
            <td style="color:blue">@i.masp</td>
            <td style="color:blue">@i.tensp</td>
            <td style="color:blue">@i.nhasx</td>
            <td style="color:blue">@i.cauhinh</td>
            <td style="color:blue">@i.tinhnang</td>
            <td><img src="~/Content/HinhAnh/@i.hinhanh" /></td>
            @using (Html.BeginForm("capnhatgiohang", "GioHang", new { @imasp = i.masp }))
            {
                <td>
                <input type="number" min="1" name="txtSoLuong" value="@i.soluong" style="background-color:yellow" />
                </td>
                <td style="color:blue">@String.Format("{0:0,0}", i.gia)</td>
            <td style="color:blue">@String.Format("{0:0,0}", i.thanhtien)</td>
            <td><a href="@Url.Action("Xoa1SP", new{mi=@i.masp})" class="btn btn-danger">Xóa</a></td>
                <td><input type="submit" value="Cập nhật"/></td>
               
            }
        </tr>   
    }
    <tr style="font-weight:bold; text-align:right; color:red";>
        <td colspan="6">Số lượng: @ViewBag.tongsoluong</td>
        <td colspan="6">Tổng tiền: @ViewBag.tongtien VNĐ</td>
        <td class="btn btn-primary"><a href="@Url.Action("DatHang")" class="btn btn-danger">Đặt Hàng</a></td>
        
    </tr>
    <tr style="font-weight:bold; text-align:right; color:blue";>
        <td colspan="12">
      @Html.ActionLink("Xóa Giỏ Hàng","xoatoanbogiohang");
        </td>
    </tr>
</table>